                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/unit_margin_top"
                android:layout_marginStart="@dimen/unit_margin_left"
                android:layout_marginEnd="@dimen/unit_margin_end"
                android:layout_toStartOf="@+id/label_meter"
                android:textSize="@dimen/value_font_size" />

            <TextView
